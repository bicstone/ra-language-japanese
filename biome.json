{
	"$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
	"files": {
		"includes": ["**", "!**/lib/**/*"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"vcs": {
		"clientKind": "git",
		"enabled": true,
		"useIgnoreFile": true
	}
}
